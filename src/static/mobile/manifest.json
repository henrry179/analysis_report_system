{
  "name": "业务分析报告自动化系统",
  "short_name": "分析系统",
  "description": "企业级智能分析平台，专为电商、零售等行业设计",
  "version": "4.0.0",
  "start_url": "/mobile/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3b82f6",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "zh-CN",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/static/mobile/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/static/mobile/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "finance"
  ],
  
  "screenshots": [
    {
      "src": "/static/mobile/screenshots/dashboard.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/static/mobile/screenshots/reports.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/static/mobile/screenshots/analytics.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  
  "shortcuts": [
    {
      "name": "仪表盘",
      "short_name": "仪表盘",
      "description": "查看系统仪表盘",
      "url": "/mobile/?shortcut=dashboard",
      "icons": [
        {
          "src": "/static/mobile/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "报告管理",
      "short_name": "报告",
      "description": "管理和查看报告",
      "url": "/mobile/?shortcut=reports",
      "icons": [
        {
          "src": "/static/mobile/icons/shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "数据分析",
      "short_name": "分析",
      "description": "进行数据分析",
      "url": "/mobile/?shortcut=analytics",
      "icons": [
        {
          "src": "/static/mobile/icons/shortcut-analytics.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://analysis-system.example.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "file_handlers": [
    {
      "action": "/mobile/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "analysis-report",
      "url": "/mobile/report?id=%s"
    }
  ],
  
  "share_target": {
    "action": "/mobile/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/csv", "application/json", ".xlsx"]
        }
      ]
    }
  }
}