# QWCoder Environment Configuration
# Copy this file to .env and customize your settings

# Core Paths
export QWCODER_HOME="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
export QWCODER_CONFIG="$QWCODER_HOME/config"
export QWCODER_SCRIPTS="$QWCODER_HOME/scripts"
export QWCODER_TOOLS="$QWCODER_HOME/tools"
export QWCODER_BIN="$QWCODER_HOME/bin"

# Development Environment
export EDITOR="${EDITOR:-vim}"
export VISUAL="${VISUAL:-$EDITOR}"
export PAGER="${PAGER:-less}"

# Node.js Environment
export NVM_DIR="$HOME/.nvm"
export NODE_ENV="${NODE_ENV:-development}"

# Python Environment
export PYTHONPATH="$PYTHONPATH:$QWCODER_HOME/tools"
export PYTHONDONTWRITEBYTECODE=1

# Go Environment
export GOPATH="$HOME/go"
export GOROOT="/usr/local/go"

# Docker Environment
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

# Git Configuration
export GIT_EDITOR="$EDITOR"
export GIT_PAGER="$PAGER"

# Terminal Configuration
export TERM="${TERM:-xterm-256color}"
export CLICOLOR=1
export LSCOLORS="GxFxCxDxBxegedabagaced"

# Custom Paths
export PATH="$QWCODER_BIN:$PATH"
export PATH="$QWCODER_TOOLS:$PATH"
export PATH="$HOME/.local/bin:$PATH"

# Development Tools
export JAVA_HOME="${JAVA_HOME:-/usr/lib/jvm/default}"
export MAVEN_HOME="${MAVEN_HOME:-/opt/maven}"
export GRADLE_HOME="${GRADLE_HOME:-/opt/gradle}"

# Database Tools
export MYSQL_HOME="${MYSQL_HOME:-/usr/local/mysql}"
export POSTGRES_HOME="${POSTGRES_HOME:-/usr/local/pgsql}"

# Cloud Tools
export AWS_DEFAULT_REGION="${AWS_DEFAULT_REGION:-us-east-1}"
export AZURE_CONFIG_DIR="$HOME/.azure"
export GOOGLE_CLOUD_SDK_HOME="${GOOGLE_CLOUD_SDK_HOME:-/opt/google-cloud-sdk}"
