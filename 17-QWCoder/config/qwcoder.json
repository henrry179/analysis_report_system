{
  "name": "QWCoder Terminal Environment",
  "version": "1.0.0",
  "description": "A comprehensive terminal configuration environment for developers",
  "author": "QWCoder Team",

  "environment": {
    "shell": "auto-detect",
    "platform": "cross-platform",
    "encoding": "utf-8"
  },

  "features": {
    "auto_completion": true,
    "syntax_highlighting": true,
    "git_integration": true,
    "package_management": true,
    "custom_scripts": true,
    "productivity_tools": true
  },

  "paths": {
    "scripts": "./scripts",
    "tools": "./tools",
    "templates": "./templates",
    "bin": "./bin",
    "config": "./config"
  },

  "aliases": {
    "qwc": "cd $QWCODER_HOME",
    "qwconfig": "vim $QWCODER_HOME/config/qwcoder.json",
    "qwupdate": "$QWCODER_HOME/scripts/update.sh",
    "qwhelp": "$QWCODER_HOME/scripts/help.sh"
  },

  "integrations": {
    "git": {
      "auto_fetch": true,
      "branch_tracking": true,
      "commit_template": true
    },
    "docker": {
      "auto_complete": true,
      "image_cleanup": true
    },
    "node": {
      "auto_nvm": true,
      "package_lock_check": true
    },
    "python": {
      "auto_venv": true,
      "requirements_check": true
    }
  },

  "customizations": {
    "prompt_style": "minimal",
    "color_scheme": "dark",
    "font_family": "monospace",
    "tab_completion": "smart"
  }
}
